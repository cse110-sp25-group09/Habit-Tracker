{
  "$schema": "https://biomejs.dev/schema.json",
  "formatter": {
    "enabled": true,
    "options": {
      "lineWidth": 80,
      "indentStyle": "space",
      "indentSize": 2,
      "quoteStyle": "double",
      "semicolons": "always"
    }
  },
  "rules": {
    "js": {
      "format": true,
      "prefer-const": "error",
      "no-var": "error",
      "semi": ["error", "always"],
      "quotes": ["error", "double"],
      "curly": ["error", "all"],
      "space-before-function-paren": ["error", "always"],
      "space-infix-ops": "error"
    },
    "css": {
      "format": true
    }
  }
}
